<h1>Listing rents</h1>

<table cellspacing="10">
  <thead>
    <tr>
      <th>Price</th>
      <th>Date</th>
      <th>Preview date</th>
      <th>End date</th>
      <th>Tenant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.price %></td>
        <td><%= rent.date.strftime('%d/%m/%Y') %></td>
        <td><%= rent.preview_date.strftime('%d/%m/%Y') %></td>
        <td><%= rent.end_date.strftime('%d/%m/%Y') %></td>
        <td><%= rent.tenant.name if not rent.tenant.nil? %></td>
        <td><%= link_to 'Show', rent %></td>
        <td><%= link_to 'Edit', edit_rent_path(rent) %></td>
        <td><%= link_to 'Destroy', rent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

